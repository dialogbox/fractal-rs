{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fractal-rs",
  "version": "0.1.0",
  "identifier": "com.fractalrs.app",
  "build": {
    "frontendDist": "../www/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../www && npm run dev",
    "beforeBuildCommand": "cd .. && wasm-pack build --target web && cd www && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Fractal RS",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
